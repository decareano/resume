<!doctype html>
<html>
<head>
  <title>{{name}}</title>
  <link rel="stylesheet" href="reset.css" />
  <link rel="stylesheet" href="style.css" />
</head>
<body>
  <header>
    <h1>{{name}}</h1>
    <h3>{{profession}}</h3>
    <ul>
    {{#each contact}}
      <li><span>&bull;</span> {{{this}}}</li>
    {{/each}}
    </ul>
  </header>
  {{#each sections}}
  <div class="section">
    <h1>{{section}}</h1>
    {{#each subsections}}
      <div class="subsection">
        <h2>{{subsection}}{{#if date}}<span>{{{date}}}</span>{{/if}}</h2>
        {{#if details}}
        <ul class="details">
        {{#each details}}
          <li>{{{this}}}</li>
        {{/each}}
        </ul>
        {{/if}}
      </div>
    {{/each}}
  </div>
  {{/each}}
</body>
</html>
